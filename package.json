{
  "name": "@cosmo-au/ui",
  "description": "Foundational styles and components for Cosmo projects.",
  "version": "0.0.1",
  "author": "Jackson Dolman <jackson@cosmogroup.io>",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bugs": {
    "url": "https://github.com/cosmo-au/ui/issues"
  },
  "devDependencies": {
    "@cosmo-au/eslint-config-cosmo": "^1.1.0",
    "@parcel/transformer-sass": "^2.2.1",
    "@stitches/react": "^1.2.6",
    "@types/react": "^17.0.38",
    "classnames": "^2.3.1",
    "eslint": "^8.7.0",
    "microbundle": "^0.14.2",
    "next": "^12.0.8",
    "nookies": "^2.5.2",
    "parcel": "^2.2.1",
    "phosphor-react": "^1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.49.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.5.4"
  },
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://ui.cosmogroup.io",
  "license": "MIT",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.module.js",
  "peerDependencies": {
    "next": ">=12",
    "nookies": ">=2.0.0",
    "react": ">=16"
  },
  "prettier": "@cosmo-au/eslint-config-cosmo/.prettierrc.json",
  "private": false,
  "repository": "https://github.com/cosmo-au/ui/",
  "scripts": {
    "build": "microbundle  --jsx React.createElement",
    "clean": "prettier --write '**/*.{js,css,scss}' '!node_modules/**' '!.git/**' '!dist/**'",
    "dev": "microbundle watch  --jsx React.createElement",
    "lint": "eslint src --ext .tsx",
    "test:dev": "parcel test/index.html",
    "release:patch": "standard-version --type patch",
    "release:minor": "standard-version --type minor",
    "release:major": "standard-version --type major"
  },
  "source": "src/index.tsx",
  "types": "dist/index.d.ts"
}
